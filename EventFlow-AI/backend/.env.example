# EventFlow-AI Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your_secret_key_here_change_in_production
PORT=5000

# Twilio Configuration
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AssemblyAI Configuration
# Get your API key from https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# Airtable Configuration  
# Get these from https://airtable.com/account
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# n8n Configuration (Optional)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/eventflow

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/eventflow.log

# Security Configuration
RATE_LIMIT_PER_MINUTE=60
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000
