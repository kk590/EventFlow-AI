{
  "airtable": {
    "description": "Airtable configuration for data storage",
    "api_key": "your_api_key",
    "base_id": "your_base_id",
    "tables": {
      "transcripts": {
        "name": "Transcripts",
        "fields": {
          "MessageID": "Single Line Text",
          "FromNumber": "Phone Number",
          "Transcription": "Long Text",
          "Source": "Single Select (voice/sms)",
          "Timestamp": "Date & Time",
          "Status": "Single Select (new/analyzed)",
          "Categories": "Multiple Select",
          "Confidence": "Number",
          "Duration": "Number"
        }
      },
      "leads": {
        "name": "Leads",
        "fields": {
          "Name": "Single Line Text",
          "Phone": "Phone Number",
          "Email": "Email",
          "EventType": "Single Select",
          "EventDate": "Date",
          "GuestCount": "Number",
          "Budget": "Currency",
          "Status": "Single Select",
          "Source": "Single Select",
          "Created": "Date & Time"
        }
      },
      "analytics": {
        "name": "Analytics",
        "fields": {
          "Date": "Date",
          "TotalCalls": "Number",
          "TotalSMS": "Number",
          "TranscriptionsProcessed": "Number",
          "AvgConfidence": "Number",
