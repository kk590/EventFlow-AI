      "Wedding Planning",
      "Corporate Event",
      "Birthday Party",
      "Conference",
      "Business Meeting",
      "Social Party",
      "Venue Booking",
      "Catering Services",
      "Entertainment",
      "Photography Services"
    ],
    "keywords": {
      "wedding": ["wedding", "marriage", "bridal"],
      "corporate": ["corporate", "business", "company", "meeting"],
      "birthday": ["birthday", "celebration", "party"],
      "conference": ["conference", "seminar", "presentation"],
      "venue": ["venue", "location", "hall", "space"],
      "catering": ["catering", "food", "menu", "dinner"],
      "photography": ["photography", "photos", "photographer"]
    }
  }
